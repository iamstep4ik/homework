FROM --platform=$BUILDPLATFORM alpine:3

ARG TARGETARCH
ENV GOOSE_VERSION_TAG="v3.22.1"

RUN apk update && \
    apk upgrade && \
    rm -rf /var/cache/apk/*


ADD https://github.com/pressly/goose/releases/download/$GOOSE_VERSION_TAG/goose_linux_${TARGETARCH} /bin/goose
RUN chmod +x /bin/goose

ADD ./entrypoint.sh /goose-docker/entrypoint.sh

ENTRYPOINT ["/goose-docker/entrypoint.sh"]
